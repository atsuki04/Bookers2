<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  <label for="inputBody">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"Body"%>
  <%= f.submit "Update Book", class: "btn btn-success" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
