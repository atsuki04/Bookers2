<div class="row">
  <h2 class="mt-3">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
　<%= form_with model: @book, local:true do |f| %>
  <div class="form-group">
　<h4>Title</h4>
　<%= f.text_field :title %>
</div>
<div class="form-group">
　<h4>Opinion</h4>
　<%= f.text_area :body %>
</div>
<div class="form-group">
　<%= f.submit "Create Book", class: "btn btn-success" %>
　<% end %>
</div>